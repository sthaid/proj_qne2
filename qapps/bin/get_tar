#!/bin/bash

# remove local xfer.tar
if [ -f xfer.tar ]; then
  rm -f xfer.tar
  if [ -f xfer.tar ]; then
    echo "ERROR: failed to remove xfer.tar"
    exit 1
  fi
fi

# remove xfer.tar from android
cmd "rm ../xfer.tar"

# create xfer.tar file on android
cmd "tar -cf ../xfer.tar ."

# upload xfer.tar from android
cmd "cat ../xfer.tar" > xfer.tar

# display info on uploaded xfer.tar file
echo created xfer.tar
ls -l xfer.tar
